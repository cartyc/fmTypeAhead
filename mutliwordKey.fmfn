

Let(

[

/*
Set the required params
*/
loop = loop+ 1;
fullWord = FieldBeginsWith ( string);
wordList = Substitute(string ; " "; ¶);
listLength = ValueCount(wordList);
currentWord = GetValue(wordList ; loop);
fieldSearch = FieldBeginsWith ( currentWord)
]
;

	//Do the recursion dance
	Case(

		listLength   >   loop

	;
		fieldSearch & ¶ & 
		searchKey(string; loop) & ¶
	;

  //Return the final results
	fullWord  & ¶ & 
	fieldSearch

	)

)
